{
  "name": "nohost-proxy",
  "version": "1.2.0",
  "description": "",
  "main": "lib/index.js",
  "author": "zman",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'lib/**/*.{js,ts,tsx}' --fix",
    "stylelint": "stylelint --fix lib/**/*.{less,scss,css}",
    "test": "jest --rootDir ./lib",
    "test:w": "jest --watchAll --rootDir ./lib --passWithNoTests",
    "prepublishOnly": "npm run test ",
    "release": "npm run test && standard-version"
  },
  "dependencies": {
    "hagent": "^0.6.1",
    "lru-cache": "^5.1.1",
    "uuid": "^3.3.3"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@a8k/changelog": "^2.3.0",
    "@commitlint/cli": "^8.2.0",
    "commitizen": "^3.1.2",
    "commitlint-config-cz": "^0.12.1",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "standard-version": "^7.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.12.1"
  },
  "lint-staged": {
    "*.{css,less,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{jsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "node_modules/@a8k/changelog/cz-config.js"
    }
  }
}
