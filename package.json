{
  "name": "bifrost-proxy",
  "version": "1.3.1",
  "main": "lib/index.js",
  "author": "zman",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'lib/**/*.{js,ts,tsx}' --fix",
    "stylelint": "stylelint --fix lib/**/*.{less,scss,css}",
    "test": "jest --rootDir ./lib",
    "test:w": "jest --watchAll --rootDir ./lib --passWithNoTests",
    "prepublishOnly": "npm run test ",
    "release": "npm run test && standard-version"
  },
  "dependencies": {
    "hagent": "^0.7.5",
    "lru-cache": "^5.1.1",
    "uuid": "^3.4.0"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@a8k/changelog": "^2.5.3",
    "@commitlint/cli": "^8.3.6",
    "commitizen": "^3.1.2",
    "commitlint-config-cz": "^0.12.1",
    "cz-customizable": "^6.9.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "node-fetch": "^2.7.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "standard-version": "^7.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.21.0",
    "ws": "^8.15.1"
  },
  "lint-staged": {
    "*.{css,less,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{jsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "node_modules/@a8k/changelog/cz-config.js"
    }
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxfdarling/bifrost-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/hxfdarling/bifrost-proxy/issues"
  },
  "homepage": "https://github.com/hxfdarling/bifrost-proxy#readme",
  "description": "为 Nodejs 提供全局代理服务，可以拦截所有从 Nodejs 发出的请求，并配置自定义代理服务器"
}
