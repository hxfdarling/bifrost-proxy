{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
